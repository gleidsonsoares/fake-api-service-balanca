<?xml version="1.0" encoding="UTF-8"?>
<service>
    <id>fake-api-service-balanca</id>
    <name>fake-api-service-balanca-1.0</name>
    <description>Fake API Service Balanca 1.0</description> <!-- Nome que irá aparecer na descrição dos serviços -->
    <executable>java</executable>
    <arguments>-jar "fake-api-service-balanca-spring-boot.jar"</arguments> <!-- Nome do jar que foi gerado no mvn:package -->
    <logmode>rotate</logmode>
    <logpath>./logs</logpath> <!-- Os logs serão colocado no diretório /logs, a partir de onde estiver o .jar -->
</service>